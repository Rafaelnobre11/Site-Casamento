rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: por padrão, ninguém pode ler ou escrever.
    // Isso garante que apenas as regras explícitas abaixo permitam acesso.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Regra para as imagens do site:
    // Permite que qualquer pessoa leia as imagens, pois elas são públicas.
    // A escrita é bloqueada para o público para proteger seu conteúdo.
    match /site_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Permite que apenas usuários autenticados (você no painel) façam upload.
    }
  }
}
