rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: por padrão, ninguém pode ler ou escrever.
    // Isso garante que apenas as regras explícitas abaixo permitam acesso.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Regra para as imagens do site:
    // Permite que qualquer pessoa leia as imagens (para o site funcionar)
    // e também permite que qualquer pessoa escreva (para o painel de admin funcionar).
    match /site_images/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
  }
}
